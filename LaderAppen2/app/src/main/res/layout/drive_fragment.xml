<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <se.ju.student.hihe1788.laderappen2.JoystickView
        android:id="@+id/joystick_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_joystick_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide_vert_50"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_vert_50"
        app:layout_constraintGuide_percent="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <se.ju.student.hihe1788.laderappen2.JoystickView
        android:id="@+id/joystick_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_joystick_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/guide_vert_50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btnAutoDrive"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="AUTO"
        android:textSize="28sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_auto_selector_drive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btn_drive_bt"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/button_bluetooth_selector_drive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_drive_honk"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/button_honk_selector_drive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/btn_drive_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/button_back_selector_drive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btn_drive_light"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/button_light_selector_drive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>