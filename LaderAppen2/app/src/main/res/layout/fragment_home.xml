<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/root_layout">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sovietSand"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sovietDarkBrown"
            android:textColor="@color/sovietWhite"
            android:textAlignment="center"
            android:fontFamily=""
            android:textSize="48sp"
            />

        <TextView
            android:id="@+id/tvClothes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sovietLightBrown"
            android:textColor="@color/sovietDarkBrown"
            android:textAlignment="center"
            android:textSize="32sp"
            />

        <TextView
            android:id="@+id/tvRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dio_border"
            android:textAlignment="center"
            android:textSize="32sp"
            android:textColor="@color/sovietDarkBrown"
            />

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="@string/warning"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_orange_light"
            android:layout_marginStart="100dp"

            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvCountdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/dsdigi_font"
                android:background="@drawable/dio_border"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/sovietDarkBrown"
                android:textSize="60sp" />

        </LinearLayout>



    </LinearLayout>



    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:itemTextColor="@color/sovietWhite"
        app:menu="@menu/navigation"
        />





</androidx.constraintlayout.widget.ConstraintLayout>