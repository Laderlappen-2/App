<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhiteOpa50"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorWhite"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhiteOpa10"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorWhiteOpa10"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhiteOpa30"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorWhiteOpa80"/>
            <corners android:radius="40dp"/>
        </shape>
    </item>

</selector>